<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="AppTheme.Main" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="cardBackgroundColor">@color/window_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="primaryButtonStyle">@style/AppTheme.Button.Cyan</item>
        <item name="primaryButtonColor">@color/button_green</item>
        <item name="secondaryButtonStyle">@style/AppTheme.Button.Cyan</item>
        <item name="longButtonStyle">@style/AppTheme.Button.Blue</item>
        <item name="longButtonText">@color/gray_text</item>
        <item name="primaryBackgroundStyle">@color/primary_background</item>
        <item name="toolbarHeight">@dimen/toolbar_height</item>
        <item name="toolbarMargin">@dimen/toolbar_margin</item>
        <item name="progressTint">@color/yellow</item>
        <item name="progressTintInverse">@color/yellow</item>
