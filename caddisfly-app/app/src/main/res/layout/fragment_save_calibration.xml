<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp"
    tools:context=".sensor.chamber.SaveCalibrationDialogFragment">

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:hint="@string/name"
        android:inputType="textCapWords"
        android:maxLength="20"
        android:textColor="?android:textColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:labelFor="@+id/editBatchCode"
        android:text="@string/reagentBatch"
        android:textColor="#999999"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editBatchCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:inputType="textCapWords"
        android:maxLength="30"
        android:paddingTop="3dp"
        android:textColor="?android:textColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:labelFor="@+id/editExpiryDate"
        android:text="@string/reagentExpiry"
        android:textColor="#999999"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editExpiryDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:focusable="false"
        android:inputType="date"
        android:paddingTop="3dp"
        android:textColor="?android:textColor" />


