<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/navigate_up"
            android:onClick="onHomeClick"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="16dp"
            android:paddingEnd="8dp"
            android:paddingBottom="16dp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/software_notices"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/about_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/about_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="@string/software_incorporates_material" />

            <TextView
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/apache_license_2"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layoutDirection="ltr"
                android:lineSpacingMultiplier="1.5"
                android:tag="link"
                android:text="@string/apache_software"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#555" />

            <TextView
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingTop="8dp"
                android:text="@string/cca_share_license"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:lineSpacingMultiplier="1.5"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:tag="link"
                android:text="@string/lovibond_software"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#555" />

            <TextView
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="@string/cca_license"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:lineSpacingMultiplier="1.5"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:tag="link"
                android:text="@string/cca_software"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#555" />

            <TextView
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="@string/eclipse_public_license"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:lineSpacingMultiplier="1.5"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:tag="link"
                android:text="@string/eclipse_software"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#555" />

            <TextView
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="@string/mit_license"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:lineSpacingMultiplier="1.5"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:tag="link"
                android:text="@string/mit_software"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#555" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
