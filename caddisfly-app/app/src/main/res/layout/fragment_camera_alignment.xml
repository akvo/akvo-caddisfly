<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutInstructions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    tools:context="org.akvo.caddisfly.sensor.colorimetry.liquid.CameraAlignmentFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <FrameLayout
            android:id="@+id/layoutCameraAlignment"
            android:layout_width="240dp"
            android:layout_height="320dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-30dp" />

        <org.akvo.caddisfly.widget.CrossHairView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <Button
        android:id="@+id/buttonStart"
        style="@style/Button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/start"
        android:theme="?primaryButtonStyle" />

</LinearLayout>


