<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="20dp"
        android:clickable="false"
        android:columnCount="2"
        android:focusable="false">

        <TextView
            android:id="@+id/textSerial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="3dp"
            android:textColor="#696969"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="1." />

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:lineSpacingExtra="3dp"
            android:paddingStart="2dp"
            android:paddingTop="3dp"
            android:paddingEnd="0dp"
            android:paddingBottom="15dp"
            android:text="@string/enter_measured_value"
            android:textSize="16sp" />
    </TableRow>

    <TextView
        android:id="@+id/textName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal"
        android:text="@string/fluoride"
        android:textSize="@dimen/default_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:textColor="#3d3d3d"
        android:textSize="14sp"
        tools:text="(0 - 14)" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editResult"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:inputType="numberDecimal"
            android:maxLength="9"
            android:textSize="26sp"
            tools:text="22.3" />

        <RadioGroup
            android:id="@+id/unitChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/us_cm" />

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/ms_cm" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editRadioValidation"
                android:layout_width="15dp"
                android:layout_height="0dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="-10dp"
                android:inputType="text" />
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/buttonSubmitResult"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:enabled="true"
        android:text="@string/next"
        android:theme="?primaryButtonStyle" />
</LinearLayout>
