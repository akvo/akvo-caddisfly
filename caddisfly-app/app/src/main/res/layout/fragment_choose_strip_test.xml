<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.akvo.akvoqr.instructions_strip.InstructionActivity.ChooseStripTestFragment">

    <TextView android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/prepare_test"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:paddingRight="12sp"
        android:background="@drawable/button_blue_selector"
        android:drawableRight="@drawable/arrow_black_right_semi_transp"
        android:id="@+id/fragment_choose_strip_testButtonPerform"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/section_label"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_choose_strip_testImageView"
        android:layout_below="@+id/fragment_choose_strip_testButtonPerform"
        android:layout_above="@+id/fragment_choose_strip_testButtonInstruction"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/instructions"
        android:textColor="@android:color/white"
        android:layout_margin="0dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="#ffa5d390"
        android:drawableRight="@drawable/arrow_black_right_semi_transp"
        android:id="@+id/fragment_choose_strip_testButtonInstruction"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
