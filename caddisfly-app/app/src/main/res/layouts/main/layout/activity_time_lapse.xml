<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.akvo.caddisfly.sensor.turbidity.TimeLapseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <LinearLayout
            android:id="@+id/layoutTitleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?colorPrimary"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingEnd="10dp"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#fff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeDevice"
                android:textColor="#d6f6fdf6"
                android:textSize="16sp" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/layoutWait"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/layoutContent4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/buttonStart"
                android:layout_below="@id/toolbar"
                android:layout_alignParentTop="true"/>

            <Button
                android:id="@+id/buttonStart"
                style="@style/Button"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="@string/start"
                android:theme="?primaryButtonStyle" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layoutDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textCountdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:textSize="40sp"
                tools:text="00:00:59" />

            <View
                android:id="@+id/viewInstallType"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e4e4e4" />

            <TextView
                android:id="@+id/textSampleCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="#5b5b5b"
                android:textSize="18dp"
                tools:ignore="HardcodedText,SpUsage"
                tools:text="Completed: 0" />

            <TextView
                android:id="@+id/textInterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="#5b5b5b"
                android:textSize="18dp"
                tools:ignore="HardcodedText,SpUsage"
                tools:text="Every 2 minutes" />

        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
