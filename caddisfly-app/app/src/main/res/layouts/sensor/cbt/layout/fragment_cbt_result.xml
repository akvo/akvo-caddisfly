<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:minWidth="400dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#c20f0f"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/textResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#faf1f1"
            android:textSize="35sp"
            android:textStyle="bold"
            tools:text="High Risk" />

        <TextView
            android:id="@+id/textResult1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#faf1f1"
            android:textSize="27sp"
            android:textStyle="bold"
            tools:text="Possibly Unsafe" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutResult1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d23f3f"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/mpn"
            android:textColor="#cce2e2e2"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textResult2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:textColor="#fdf2f2"
            android:textSize="37sp"
            tools:text="> 100" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/confidenceInterval"
            android:textColor="#cce2e2e2"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textResult3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:textColor="#fdf2f2"
            android:textSize="37sp"
            tools:text="9435.1" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonAcceptResult"
        style="@style/Button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:onClick="onClickAcceptResult"
        android:text="@string/acceptResult"
        android:theme="?primaryButtonStyle" />

</LinearLayout>
