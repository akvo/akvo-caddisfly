<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="callback"
            type="org.akvo.caddisfly.sensor.cbt.CbtInstructionFragment" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <RelativeLayout
            android:id="@+id/layout_footer"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/image_pageLeft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:onClick="@{() ->  callback.onClickLeft()}"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/button_arrow_left_selector"
                android:visibility="invisible" />

            <org.akvo.caddisfly.sensor.colorimetry.strip.widget.PageIndicatorView
                android:id="@+id/pager_indicator"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/image_pageRight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:onClick="@{() ->  callback.onClickRight()}"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/button_arrow_right_selector" />
        </RelativeLayout>

    </RelativeLayout>
</layout>
