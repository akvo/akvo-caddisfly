<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layoutButtons"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="12dp"
            android:paddingStart="4dp">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="12dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:clickable="false"
                    android:columnCount="2"
                    android:focusable="false"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="1."
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/collect_sample_thio_bag"
                        android:textSize="17sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:columnCount="2"
                    android:focusable="false"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="2."
                        android:textSize="17sp" />

                    <org.akvo.caddisfly.widget.HtmlTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:text="@string/add_medium_to_thio_bag"
                        android:textSize="17sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:columnCount="2"

                    android:focusable="false"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="3."
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:text="@string/slowly_pour_sample_into_bag"
                        android:textSize="17sp" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:columnCount="2"
                    android:focusable="false"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="4."
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/let_sample_incubate"
                        android:textSize="17sp" />
                </TableRow>


            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:shrinkColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:columnCount="2"
                    android:focusable="false"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ddd"
                        android:padding="3dp"
                        android:text="Temperature"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#BDCAD2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="#ddd"
                        android:paddingBottom="3dp"
                        android:paddingEnd="0dp"
                        android:paddingStart="14dp"
                        android:paddingTop="3dp"
                        android:text="Incubation time"
                        android:textColor="#000"
                        android:textSize="17sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:columnCount="3"
                    android:focusable="false"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#eee"
                        android:padding="7dp"
                        android:text="35 – 44.5°C"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#BDCAD2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="#eee"
                        android:paddingBottom="7dp"
                        android:paddingEnd="0dp"
                        android:paddingStart="14dp"
                        android:paddingTop="7dp"
                        android:text="@string/incubate_20_24_hours"
                        android:textSize="17sp" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDCAD2" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:columnCount="2"
                    android:focusable="false"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#eee"
                        android:padding="7dp"
                        android:text="31 – 34°C"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#BDCAD2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="#eee"
                        android:paddingBottom="7dp"
                        android:paddingEnd="0dp"
                        android:paddingStart="14dp"
                        android:paddingTop="7dp"
                        android:text="@string/incubate_24_30_hours"
                        android:textSize="17sp" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDCAD2" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:columnCount="2"
                    android:focusable="false"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#eee"
                        android:padding="7dp"
                        android:text="25 – 30°C"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#BDCAD2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="#eee"
                        android:paddingBottom="7dp"
                        android:paddingEnd="0dp"
                        android:paddingStart="14dp"
                        android:paddingTop="7dp"
                        android:text="@string/incubate_40_48_hours"
                        android:textSize="17sp" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDCAD2" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:columnCount="2"
                    android:focusable="false"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#eee"
                        android:padding="7dp"
                        android:text="Below 25 °C"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#BDCAD2" />

                    <TextView
                        android:id="@+id/button_instructions"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="#eee"
                        android:onClick="onClickIncubationTimes"
                        android:paddingBottom="7dp"
                        android:paddingEnd="0dp"
                        android:paddingStart="14dp"
                        android:paddingTop="7dp"
                        android:text="Read Instructions"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="17sp" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDCAD2" />

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:shrinkColumns="2">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:clickable="false"
                    android:columnCount="2"
                    android:focusable="false"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="5."
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="When incubation time has elapsed click Next."
                        android:textSize="17sp" />
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/buttonStart"
            style="@style/SingleButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="25dp"
            android:onClick="onClickNextButton"
            android:text="Next"
            android:theme="?primaryButtonStyle"
            android:visibility="visible" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:text="@string/source_aquagenx"
        android:textColor="#888"
        android:textSize="13sp" />

</RelativeLayout>