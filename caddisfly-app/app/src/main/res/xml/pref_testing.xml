<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <org.akvo.caddisfly.preference.PreferenceCategoryCustom
        android:key="preferenceCategoryDiagnostics"
        android:title="@string/testing">
        <CheckBoxPreference
            android:key="@string/testModeOnKey"
            android:summary="Warning: Do not turn this on for normal usage of the app. For app testing only."
            android:title="@string/testModeOn" />

        <CheckBoxPreference
            android:key="@string/saveTestImageKey"
            android:summary="Saves the strip patch image for testing"
            android:title="@string/save_test_image" />

        <Preference
            android:key="@string/simulateCrashKey"
            android:summary="This sends a dummy crash report"
            android:title="@string/simulateCrash" />
    </org.akvo.caddisfly.preference.PreferenceCategoryCustom>
</PreferenceScreen>
