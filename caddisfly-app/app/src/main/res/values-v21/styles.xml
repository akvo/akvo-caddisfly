<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="dialogDestructiveButton">@style/AppTheme.Dialog.Destructive</item>
        <item name="toolbarHeight">@dimen/toolbar_height</item>
        <item name="toolbarMargin">@dimen/toolbar_margin</item>
    </style>

    <style name="ListButton" parent="Button">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">#014b86</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog" />

    <style name="AppTheme.Dialog.Destructive">
        <item name="android:buttonBarPositiveButtonStyle">@style/DestructiveButton</item>
    </style>

    <style name="DestructiveButton" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:textColor">@color/destructive</item>
    </style>

    <style name="floating_action_button_middle">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">-24dp</item>
    </style>

    <style name="floating_action_button">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">-8dp</item>
    </style>

</resources>