<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    tools:context="org.akvo.akvoqr.CameraPrepareFragment"
    android:id="@+id/overlay"
    android:background="@android:color/background_light"
    >

    <include layout="@layout/quality_checks" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_camera_starttestCountQualityTextView"
    android:layout_above="@+id/include_layout_progress"
    android:layout_margin="@dimen/activity_horizontal_margin"/>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/progress"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/include_layout_progress"/>

</RelativeLayout>

